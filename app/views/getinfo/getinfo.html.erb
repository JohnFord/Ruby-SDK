<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<%= stylesheet_link_tag "main" %>
<%= javascript_include_tag "jquery-1.7.2.min" %>
<%= javascript_include_tag "common" %>
</head>
<script type="text/javascript">
$(document).ready(function() {
	var height = $("#response_tbl").height();
	if(height != null && height < 300){
		$("#response_div").height(height);
	}
});
</script>
<body>
<div id="container">
	<%=render :partial => "header/header" , :locals => { :selectedHeader => "report" ,:selectedSubMenu => "getInfo"} %>
	<div id="content">
		<h1>Get Info</h1>
		<%= form_for :post , url: { action: :getinforequest } do |f| %>
			<table cellpadding="5" cellspacing="5">
				<tr>	
					<td colspan="2">
						&nbsp;
					</td>						
				</tr>
				<%=render :partial => "urlcombo/urlcombo" %>				
				<tr>
					<td style="width: 50%;">
						Transaction Type
					</td>
					<td>
						<select id="transType" name="transType" class="combo_width">
							<option value="BatchInquiry">BatchInquiry</option>
							<option value="Setup">Setup</option>
							<option value="StatusCheck">StatusCheck</option>
							<option value="Initialize">Initialize</option>
						</select>
					</td>
				</tr>
				
				<tr>	
					<td>
						Ext Data
					</td>
					<td>
						<input type="text" id="extData" name="extData"/>
					</td>			
				</tr>				
				
				<tr>	
					<td colspan="2">&nbsp;</td>
				</tr>
				<tr>	
					<td colspan="2">
						<input type="submit" value="OK" class="submit"/>					
					</td>						
				</tr>					
			</table>
		<% end %>
		<%=render :partial => "getinforesponse/getinforesponse", :locals => { :resp => @resp } %>
	  </div>
	<!-- content div ends here -->
	<div class="clearfix"></div>
</div>
<!-- container div ends here -->
<%=render :partial => "footer/footer" %>
</body>
</html>
